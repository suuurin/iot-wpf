<mah:MetroWindow 
    x:Class="WpfRefApp03.Views.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:dialogs="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:cal="http://caliburnmicro.com"
    xmlns:local="clr-namespace:WpfRefApp03.Views"
    mc:Ignorable="d"
    Title="ShellView" Height="350" Width="600"
    dialogs:DialogParticipation.Register="True">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Dialog 테스트 예제" FontSize="16" Margin="0 0 0 10" />
            <Button Content="Show Dialog"
                    cal:Message.Attach="ShowDialog" Width="120" />
        </StackPanel>
    </Grid>
</mah:MetroWindow>
