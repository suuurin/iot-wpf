<Window x:Class="WpfSmartHomeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:WpfSmartHomeApp.UserControls"
        xmlns:local="clr-namespace:WpfSmartHomeApp"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None" AllowsTransparency="True"
        x:Name="window"
        Title="MainWindow" Height="720" Width="1080"
        Dialog:DialogParticipation.Register="{Binding}"
        Closing="window_Closing">
    <Border Background="White"
            Padding="30"
            CornerRadius="30"
            MouseDown="Border_MouseDown"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Menu -->
            <Border CornerRadius="10"
                    Background="#3253F1">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1"
                                      BlurRadius="20"
                                      Opacity="0.4" />
                </Border.Effect>

                <Grid>
                    <StackPanel>
                        <Button Style="{StaticResource MenuButton}"
                                Margin="15,40,15,20"
                                Background="#FFFFFF">
                            <Image Source="/Images/_home2.png" Width="30"  />
                        </Button>

                        <Button Style="{StaticResource MenuButton}">
                            <Image Source="/Images/_bed.png"
                                   Width="30" />
                        </Button>

                        <Button Style="{StaticResource MenuButton}">
                            <Image Source="/Images/_users.png"
                                   Width="30" />
                        </Button>

                        <Button Style="{StaticResource MenuButton}">
                            <Image Source="/Images/_shield.png"
                                   Width="30" />
                        </Button>

                        <Button Style="{StaticResource MenuButton}">
                            <Image Source="/Images/_location.png"
                                   Width="30" />
                        </Button>

                        <Button Style="{StaticResource MenuButton}">
                            <Image Source="/Images/_chart.png"
                                   Width="30" />
                        </Button>
                    </StackPanel>

                    <Button Style="{StaticResource MenuButton}"
                            Margin="15,0,15,25"
                            VerticalAlignment="Bottom" Click="Button_Click">
                        <Image Source="/Images/_logout.png"
                               Width="30"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Page 1-->
            <Border x:Name="Page1" Style="{StaticResource BorderPage}">

                <Border CornerRadius="25">
                    <Border.Background>
                        <ImageBrush Stretch="Fill"
                                    Opacity="0.6"
                                    ImageSource="/Images/p2.jpg" />
                    </Border.Background>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- Titles -->
                        <StackPanel VerticalAlignment="Center"
                                    Margin="60,0,0,0">
                            <TextBlock FontSize="22"
                                       Text="Controlling"
                                       Foreground="White" />

                            <TextBlock FontSize="36"
                                       FontWeight="Bold"
                                       Margin="0,10"
                                       Text="Hugo's SmartHome"
                                       TextWrapping="Wrap"
                                       Foreground="White" />

                            <TextBlock FontSize="32"
                                       Foreground="White">
                                <Run Text="25" /><Run Text="℃"
                                                      FontWeight="Thin"
                                                      FontSize="26" />
                            </TextBlock>

                            <TextBlock Text="Celsius"
                                       Foreground="White"
                                       FontSize="12"
                                       Margin="15,0,0,0" />
                        </StackPanel>
                        
                        <!-- Panels -->
                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Margin="0,0,50,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                
                                <!-- Cards -->
                                <uc:Card Grid.Column="0"
                                         Grid.Row="0"
                                         Margin="0,0,8,8"
                                         Title="Refrigerator"
                                         ImageOff="/Images/fridge_off.png"
                                         ImageOn="/Images/fridge_on.png"
                                         IsChecked="True"/>

                                <uc:Card Grid.Column="1"
                                         Grid.Row="0"
                                         Margin="0,0,8,8"
                                         Title="Electricity"
                                         ImageOff="/Images/electric_off.png"
                                         ImageOn="/Images/electric_on.png"
                                         IsChecked="True"/>

                                <uc:Card Grid.Column="0"
                                         Grid.Row="1"
                                         Margin="0,0,8,8"
                                         Title="Air Conditioner"
                                         ImageOff="/Images/conditioner_off.png"
                                         ImageOn="/Images/conditioner_on.png"
                                         IsChecked="True" />

                                <uc:Card Grid.Column="1"
                                         Grid.Row="1"
                                         Margin="0,0,8,8"
                                         Title="Lights"
                                         ImageOff="/Images/light_off.png"
                                         ImageOn="/Images/light_on.png"
                                         IsChecked="True" />
                            </Grid>
                            
                            <!-- Add Button -->
                            <uc:AddButton Title="Add New Room" Grid.Column="1" Margin="0,50,0,0" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Border>
                
            </Border>
        </Grid>
    </Border>
</Window>
